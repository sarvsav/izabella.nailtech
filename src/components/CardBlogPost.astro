---
import { Image } from "astro:assets";
const { post } = Astro.props;

if (!post) {
	return;
}
---

<article class="odd:rotate-1 even:-rotate-1 hover:rotate-0 transition hover:scale-105 duration-500 bg-white">
	<a href={`/blog/${post.id}`} class="h-full flex flex-col">
		<Image
			src={post.data.image}
			alt={post.data.imageAlt}
			class:list={"w-full aspect-[6/4] object-cover rounded-t-2xl"}
			transition:name={`post-image-${post.id}`}
		/>

		<div class="px-4 pt-8 flex flex-col grow border-x-2 border-b-2 border-gray-100 rounded-b-2xl overflow-hidden">
			<h2 class="h5 tracking-wide" transition:name={`post-title-${post.id}`}>{post.data.title}</h2>
			<p class="mt-2 mb-8 prose" transition:name={`post-excerpt-${post.id}`}>{post.data.excerpt}</p>
			<span
				class="text-center px-4 py-2 -mx-4 text-white text-2xl font-bold bg-gradient-to-r from-fuchsia-500 to-teal-500 mt-auto block"
			>
				Read More
			</span>
		</div>
	</a>
</article>
