---
import { socialMedia } from "~/data/config.js";
import IconFacebook from "~/assets/icons/facebook.svg";
import IconInstagram from "~/assets/icons/instagram.svg";
import IconX from "~/assets/icons/x.svg";
import IconYouTube from "~/assets/icons/youtube.svg";
---

{
	Object.values(socialMedia).map((item: { url: string; label: string; icon: string }) => (
		<a href={item.url} target="_blank" aria-label={item.label} rel="noopener noreferrer" class="social-media-icon">
			{item.icon === "facebook" && <IconFacebook class="size-7 hover:text-fuchsia-500 transition p-1 -m-1" />}
			{item.icon === "instagram" && <IconInstagram class="size-7 hover:text-fuchsia-500 transition p-1 -m-1" />}
			{item.icon === "youtube" && <IconYouTube class="size-7 hover:text-fuchsia-500 transition p-1 -m-1" />}
			{item.icon === "x" && <IconX class="size-7 hover:text-fuchsia-500 transition p-1 -m-1" />}
		</a>
	))
}
