---
import { Image } from "astro:assets";
const { title, excerpt, image, imageAlt, id } = Astro.props;
---

<div class="not-prose">
	<Image src={image} alt={imageAlt} class:list={"rounded-xl aspect-[4/3] object-cover object-center"} transition:name={`post-image-${id}`} />
	<h1 class="mt-8" transition:name={`post-title-${id}`}>{title}</h1>
	<p class="font-medium text-lg mt-4" transition:name={`post-excerpt-${id}`}>{excerpt}</p>
	<hr class="mt-8" />
</div>
