---
const { color = "teal", title = "" }: BadgeProps = Astro.props;

interface BadgeProps {
	color?: "red" | "teal";
	title?: string;
}

const colors = {
	fuchsia: "bg-fuchsia-500/5 text-fuchsia-500 ring-1 ring-fuchsia-500",
	teal: "bg-teal-500/5 text-teal-500 ring-1 ring-teal-500",
	white: "bg-white",
};
---

<span class={`inline-flex not-prose items-center mb-4 rounded-full px-3 py-1 text-base font-semibold ${colors[color]}`}
	>{title}</span
>
