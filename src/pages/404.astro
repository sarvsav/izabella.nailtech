---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Container from "~/components/Container.astro";
---

<Layout>
	<Section>
		<Container>
			<div class="min-h-[calc(100svh_-_24rem)] lg:min-h-[calc(100svh_-_30rem)] mx-auto w-full max-w-6xl">
				<div class="text-center">
					<p class="font-bold text-teal-500 text-8xl">404</p>
					<h1 class="mt-8 text-4xl font-bold text-balance lg:text-5xl">This page could not be found.</h1>
					<p class="mt-6 text-base text-balance">
						You may have mistyped the address or the page may have moved.
					</p>
					<div class="mt-16">
						<a href="/" class="button button-teal">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								viewBox="0 0 20 20"
								fill="currentColor"
								class="size-4 inline-block -mt-0.5 mr-1"
							>
								<path
									fill-rule="evenodd"
									d="M9.293 2.293a1 1 0 0 1 1.414 0l7 7A1 1 0 0 1 17 11h-1v6a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3a1 1 0 0 0-1-1H9a1 1 0 0 0-1 1v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-6H3a1 1 0 0 1-.707-1.707l7-7Z"
									clip-rule="evenodd"></path>
							</svg>
							Go back home
						</a>
					</div>
				</div>
			</div>
		</Container>
	</Section>
</Layout>
